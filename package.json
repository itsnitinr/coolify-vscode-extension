{
  "name": "vscode-coolify",
  "displayName": "Coolify for VSCode",
  "description": "Create and track your Coolify deployments right from Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:coolify-deployments"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coolify-sidebar",
          "title": "Coolify for VSCode",
          "icon": "public/logo.svg"
        }
      ]
    },
    "views": {
      "coolify-sidebar": [
        {
          "type": "webview",
          "id": "coolify-deployments",
          "name": "Coolify",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "coolify-deployments",
        "contents": "Welcome to Coolify for VSCode!\n\nTo get started, configure your Coolify server settings.\n\n[Configure Settings](command:coolify.configure)\n\nLearn more about [how to configure](https://coolify.io/docs/api-reference/authorization)",
        "when": "!coolify.isConfigured"
      }
    ],
    "commands": [
      {
        "command": "coolify.configure",
        "title": "Configure Coolify for VSCode",
        "enablement": "!coolify.isConfigured"
      },
      {
        "command": "coolify.reconfigure",
        "title": "Reconfigure Coolify for VSCode",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.refreshApplications",
        "title": "Refresh Applications",
        "icon": "$(refresh)"
      },
      {
        "command": "coolify.deployApplication",
        "title": "Deploy Application"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coolify.refreshApplications",
          "when": "view == coolify-deployments && coolify.isConfigured",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}